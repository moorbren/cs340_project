<div id="media">
    <h1 class="media-title">{{Title}}</h1>
    <div class="media-creator">{{Creator}}</div>
    <div class="media-type">{{Type}}</div>
    <div class="media-description">{{Description}}</div>
    {{#if Rating}}
      <div class="media-rating">{{Rating}}</div>
    {{else}}
      <div class="media-ratingLink">No ratings yet! <a href="#">Be the first!</a></div>
    {{/if}}

</div>

