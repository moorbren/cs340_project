<div id="user-container" class="card" style="width: 50%;margin: auto;">
    <div><h2 isAuthor="{{user.isAuthor}}" id="user-header">{{user.username}}</h2></div>
    <div id="user-date"><span style="font-weight: bold">Account Created:</span> {{user.creationDate}}</div>
</div>

{{#if articles}}
{{>article-table}}
{{/if}}

<script>
    var header = document.querySelector('#user-header');
    if(header.getAttribute('isAuthor') === "1"){ 
        var img = document.createElement('img');
        img.classList.add('verified-img');
        img.src = "https://upload.wikimedia.org/wikipedia/commons/e/e4/Twitter_Verified_Badge.svg";
        img.alt = "Verified Author";
        img.title = "Verified Author"

        header.insertAdjacentElement("beforeend",img);
    }

</script>